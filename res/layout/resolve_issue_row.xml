<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/list_selector"
    android:orientation="horizontal"
    android:padding="5dip"
    tools:ignore="SpUsage,ContentDescription,HardcodedText" >

    <LinearLayout
        android:id="@+id/thumbnail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginRight="5dip"
        android:background="@drawable/image_bg"
        android:padding="3dip" >

        <ImageView
            android:id="@+id/list_image"
            android:layout_width="50dip"
            android:layout_height="50dip"
            android:src="@drawable/create_default"
            tools:ignore="ContentDescription" />
    </LinearLayout>

    <TextView
        android:id="@+id/waterpointName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/thumbnail"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Waterpoint Name"
        android:textColor="#040404"
        android:textSize="20dip"
        android:textStyle="bold"
        android:typeface="sans"
        tools:ignore="SpUsage" />

    <TextView
        android:id="@+id/issueType"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/waterpointName"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Issue Type"
        android:textColor="#343434"
        android:textSize="15dip"
        tools:ignore="SpUsage" />
    
 	<TextView
        android:id="@+id/dateCreated"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/issueType"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Date Created"
        android:textColor="#343434"
        android:textSize="15dip"
        tools:ignore="SpUsage" />
 	<TextView
        android:id="@+id/issueResolved"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/dateCreated"
        android:layout_marginTop="1dip"
        android:layout_toRightOf="@+id/thumbnail"
        android:text="Status"
        android:textColor="#343434"
        android:textSize="15dip"
        tools:ignore="SpUsage" />
 	
     <!-- Rightend Arrow -->
     <ImageView android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/arrow"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"/>
     
     <!-- Issue Type Id -->

     <TextView
         android:id="@+id/issueTypeId"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone" />

     <!-- Issue ID -->

     <TextView
         android:id="@+id/issueId"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone" />

     <!-- Waterpoint ID -->

     <TextView
         android:id="@+id/waterpointID"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:visibility="gone" />

</RelativeLayout>